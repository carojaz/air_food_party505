<%= render 'shared/navbar' %>
<div class="quote-bckg">
  <div class="container">
    <div class="show-card">
      <div class="title">
        <h1 class="text-center pt-3"> <%= cl_image_tag @device.user.photo.key, :transformation=>[
      {:width=>500, :height=>500, :gravity=>"face", :radius=>"max", :crop=>"crop"},
      {:width=>400, :crop=>"scale"}
      ], class: "avatar-large"%>  <%= @device.name %></h1>
      </div>

      <div class="show-info">
        <div class="action">
          <% if @device.photo.attachment %>
                <%= cl_image_tag @device.photo.key, height: 300, width: 300, crop: :fill, class: 'card-img' %>
          <% end %>
          <div class="action-btn">
            <%= link_to "New rental", new_device_rental_path(@device, @rental), class: 'btn-detail' %>
            <%= link_to "Edit device", edit_device_path(@device), class: 'btn-detail'  %>
            <button id="sweet-alert-demo" class="btn-detail">Destroy device</button>
            <%= link_to "", device_path(@device), method: :delete, id: "delete-link", class: "hidden" %>
          </div>
        </div>
          <div class="device-details">
            <div class="device-info">
              <h4>Description</h4>
              <p><%= @device.description %></p>
              <h4>Price per day</h4>
              <p><%= @device.price %>â‚¬/day</p>
              <% @user = User.find(@device.user_id) %>
            </div>
            <div class="device-owner">
              <h4>AirFooder</h4>
                <p><%= @user.first_name %></p>
              <h4>AirFooder address</h4>
                <p><%= @user.address %></p>
              <h4>AirFooder phone number</h4>
                <p><%= @user.phone_number %></p>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
